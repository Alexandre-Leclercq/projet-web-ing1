{% extends 'base.html.twig' %}
{% block main %}
    <div class="container my-5">
		<div class="row">
			<div class="col-xl col-lg">
				<div class="card shadow mb-4">
					<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
						<h6 class="m-0 fw-bold text-primary col-6">Edit user</h6>
					</div>
					<div class="card-body">
                        {{ form_start(form) }}
                        <div class="row justify-content-center">
                            <div class="col-xl-3 col-lg-4 col-6 align-self-center">
                                <div class="row mb-3">
                                    {% if currentUser.pictureFileLink is not null %}
                                        <img src="{{ asset(file_dir ~ '/' ~ currentUser.pictureFileLink) }}" class="img-thumbnailt" alt="profile picture">
                                    {% else %}
                                        <img src="{{ asset('build/img/placeholder_profile.png') }}" class="img-thumbnailt" alt="profile picture">
                                    {% endif %}
                                </div> 
                            </div>
                            <div class="col-lg">
                                <div class="row mb-1">
                                    <div class="col-md-6">{{ form_row(form.firstName) }}</div>
                                    <div class="col-md-6">{{ form_row(form.lastName) }}</div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">{{ form_row(form.email) }}</div>
                                    <div class="col-md-6">{{ form_row(form.idRole) }}</div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        {{ form_row(form.plainPassword.first) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(form.plainPassword.second) }}
                                    </div>
                                </div>
                                <div class="row mb-1">
                                    <div class="col-md-6">
                                        {{ form_row(form.picture) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_row(form.dateLog) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="float-end mt-3">
                            <a class="btn btn-secondary rounded" href="{{ path('admin.user.list') }}">Cancel</a>
                            <button class="btn btn-primary rounded">Valid</button>
                        </div>
                        {{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}